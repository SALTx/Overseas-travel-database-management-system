<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Universal test</title>
    <style>
      .table-container {
        overflow-x: auto;
        white-space: nowrap;
      }
    </style>
    <script>
      function scrollTable(direction) {
        const tableContainer = document.getElementById("tableContainer");
        const scrollDistance = 300; // Adjust this value to change scroll distance

        if (direction === "left") {
          tableContainer.scrollBy(-scrollDistance, 0);
        } else if (direction === "right") {
          tableContainer.scrollBy(scrollDistance, 0);
        }
      }
    </script>
  </head>
  <body>
    <div class="table-container" id="tableContainer">
      <table class="table table-bordered table-hover">
        <thead class="thead-light">
          <tr>
            <% Object.keys(data[0]).forEach((key) => { %>
            <th><%= key %></th>
            <% }); %>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((row, index) => { %> <% if (index >= 10 && index <=
          19) { %>
          <tr>
            <% Object.values(row).forEach((value) => { %>
            <td><%= value %></td>
            <% }); %>
          </tr>
          <% } %> <% }); %>
        </tbody>
      </table>
    </div>
    <button onclick="scrollTable('left')">Scroll Left</button>
    <button onclick="scrollTable('right')">Scroll Right</button>
  </body>
</html>
